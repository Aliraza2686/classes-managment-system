  <div class="home-section">
    <div class="nav bg-light p-3 text-dark">
      <h5>Update Student <i class="fas fa-building"></i></h5>
     </div>

     
     <div class="container">
                        
        <form action="/update/student/<%=clas.id%>/<%=student.id%>?_method=PUT" method="POST" class="form-group m-5">
            <h3 class="text-center">Update Student <i class="fas fa-book-reader"></i></h3>
           <div>
               <label for="name">Student Name</label><br>
               <input type="text" name="Sname" id="name" placeholder="Enter Student Name" required class="form-control" value="<%=student.Sname%>">
           </div><br>
           <div>
            <label for="rollno">Student Roll No</label><br>
            <input type="text" name="Srollno" id="rollno" placeholder="Enter Student Roll No" required class="form-control" value="<%=student.Srollno%>">
        </div><br>
           <div>
               <label for="Sgender">Gender</label>
               <select name="Sgender" id="gender" class="form-control">
                <% if(student.Sgender === 'male') { %> 
                    <option value="male" selected>Male</option>
                    <option value="female">Female</option>
                    <% } else if(student.Sgender === 'female') { %>
                        <option value="female" selected>Female</option>
                        <option value="male" >Male</option>
                        <%} %>

               </select>
               
        </div><br>
        <div>
            <label for="Sstatus">Status</label>
               <select name="Sstatus" id="status" class="form-control">
            
                <% if(student.Sstatus === 'average') { %>    
                  <option value="average" selected>Average</option>
                    <option value="good" >Good</option>
                     <option value="excelent">Excelent</option>
                        <option value="bad">Bad</option>
                    <% } else if(student.Sstatus === 'good') { %> 
                        <option value="good" selected>Good</option>
                        <option value="average">Average</option>
                          <option value="excelent">Excelent</option>
                             <option value="bad">Bad</option>
                        <%} else if(student.Sstatus === 'excelent') { %>
                             <option value="excelent" selected>Excelent</option>
                             <option value="good" >Good</option>
                             <option value="average">Average</option>
                             <option value="bad">Bad</option>
                            <% } else if(student.Sstatus === 'bad') { %> 
                                <option value="bad" selected>Bad</option>
                                <option value="excelent" >Excelent</option>
                                <option value="good">Good</option>
                                <option value="average">Average</option>
                                <% }%>
               </select>
               

        </div><br>
      
        <div>
            <label for="Stype">Role</label>
            <select name="Stype" id="representetive" class="form-control">

                <% if(student.Stype === 'genral') { %>         
                    <option value="genral" selected>genral</option>
                     <option value="cr" >CR</option>
                     <option value="gr" >GR</option>
                     <option value="secondCr">Second CR</option>
                     <option value="secondGr" >Second GR</option>
                      <% } else if(student.Stype === 'cr') { %> 
                       <option value="cr" selected>CR</option>
                       <option value="genral">genral</option>
                       <option value="gr" >GR</option>
                       <option value="secondCr">Second CR</option>
                       <option value="secondGr" >Second GR</option>
                          <%} else if(student.Stype === 'gr') { %>
                                <option value="gr" selected>GR</option>
                                <option value="cr">CR</option>
                                <option value="genral">genral</option>
                                <option value="secondCr">Second CR</option>
                                <option value="secondGr" >Second GR</option>
                              <% } else if(student.Stype === 'secondCr') { %> 
                                  <option value="secondCr" selected>Second CR</option>
                                  <option value="gr" >GR</option>
                                  <option value="cr">CR</option>
                                  <option value="genral">genral</option>
                                  <option value="secondGr" >Second GR</option>
                                  <% } else if(student.Stype === 'secondGr') { %>
                                    <option value="secondGr" selected>Second GR</option>
                                    <option value="secondCr">Second CR</option>
                                  <option value="gr" >GR</option>
                                  <option value="cr">CR</option>
                                  <option value="genral">genral</option>
                                  <% }%>

            </select>
         
        </div><br>

    

     <br>
     <button type="submit" class="btn btn-primary mb-3">Update</button>
     <a href="/dashboard" class="btn btn-danger mb-3">Cancel</a>
        </form>
    </div>
  



  </div>
